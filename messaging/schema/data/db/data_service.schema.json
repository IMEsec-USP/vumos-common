{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://hackersdobem.sti.usp.br/vumos/schema/data/db/data_service.schema.json",
    "title": "Vumos Project Service Data Message",
    "description": "A message for service data in the Vumos protocol",
    "type": "object",
    "properties": {
        "ip_address": {
            "description": "Target IP address",
            "type": "string"
        },
        "protocol": {
            "description": "Service protocol",
            "type": "string"
        },
        "name": {
            "description": "Service name",
            "type": "string"
        },
        "port": {
            "description": "Service port",
            "type": "integer"
        },
        "version": {
            "description": "Service version string",
            "type": "string"
        },
        "extra": {
            "description": "Extra data associated with the host",
            "type": "object"
        }
    },
    "required": [
        "ip_address",
        "port"
    ]
}